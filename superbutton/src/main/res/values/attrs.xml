<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SuperView">
        <!--默认背景颜色-->
        <attr name="background_normalColor" format="reference|color" />
        <!--是否开启点击效果,默认关闭-->
        <attr name="open_pressed_effect" format="boolean" />
        <!--按压时的背景颜色-->
        <attr name="background_pressedColor" format="reference|color" />
        <!--是否可以点击-->
        <attr name="clickable" format="boolean" />

        <!--按钮圆角，如果单独设置会覆盖此设置-->
        <attr name="corner" format="dimension" />
        <!--左上角圆角半径-->
        <attr name="corner_leftTop" format="dimension" />
        <!--左下角圆角半径-->
        <attr name="corner_leftBottom" format="dimension" />
        <!--右上角圆角半径-->
        <attr name="corner_rightTop" format="dimension" />
        <!--右下角圆角半径-->
        <attr name="corner_rightBottom" format="dimension" />

        <!--阴影开始颜色-->
        <attr name="shadow_startColor" format="color" />
        <!--阴影结束颜色-->
        <attr name="shadow_endColor" format="color" />
        <!--阴影大小-->
        <attr name="shadow_size" format="dimension" />

        <!--边框宽度-->
        <attr name="border_width" format="dimension" />
        <!--边框虚线宽度-->
        <attr name="border_dashWidth" format="dimension" />
        <!--边框虚线间隙值-->
        <attr name="border_dashGap" format="dimension" />
        <!--边框颜色-->
        <attr name="border_color" format="color" />

        <!--形状-->
        <attr name="shape" format="enum">
            <!--圆形-->
            <enum name="circle" value="1" />
            <!--矩形-->
            <enum name="rect" value="2" />
        </attr>

        <!--按钮背景是渐变色时设置-->
        <!--开始颜色-->
        <attr name="background_startColor" format="color" />
        <!--结束颜色-->
        <attr name="background_endColor" format="color" />
        <!--颜色方向-->
        <attr name="background_colorOrientation" format="enum">
            <!--从上到下-->
            <enum name="top_bottom" value="0x1" />
            <!--从右上到左下-->
            <enum name="tr_bl" value="0x2" />
            <!--从右到左-->
            <enum name="right_left" value="0x3" />
            <!--从右下到左上-->
            <enum name="br_tl" value="0x4" />
            <!--从下到上-->
            <enum name="bottom_top" value="0x5" />
            <!--从左下到右上-->
            <enum name="bl_tr" value="0x6" />
            <!--从左到右-->
            <enum name="left_right" value="0x7" />
            <!--从左上到右下-->
            <enum name="tl_br" value="0x8" />
        </attr>

    </declare-styleable>

