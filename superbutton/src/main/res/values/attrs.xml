        <!--默认配置-->
        <attr name="text" format="reference|string" />
        <!--按钮文字颜色-->
        <attr name="textColor" format="reference|color" />
        <!--提示文字-->
        <attr name="hintText" format="reference|string" />
        <!--提示文字颜色-->
        <attr name="hintTextColor" format="reference|color" />
        <!--按钮文字大小-->
        <attr name="textSize" format="dimension" />
        <!--文字是否单行，默认单行-->
        <attr name="singleLine" format="boolean" />

        <!--图标资源-->
        <attr name="icon" format="reference" />
        <!--图标距文字的距离-->
        <attr name="iconPadding" format="dimension" />
        <!--图标宽-->
        <attr name="iconWidth" format="dimension" />
        <!--图标高-->
        <attr name="iconHeight" format="dimension" />
        <attr name="iconOrientation" format="enum">
            <!--图标在文字上面-->
            <enum name="top" value="0x1" />
            <!--图标在文字下面-->
            <enum name="bottom" value="0x2" />
            <!--图标在文字右面-->
            <enum name="right" value="0x3" />
            <!--图标在文字左面-->
            <enum name="left" value="0x4" />
        </attr>
    </declare-styleable>


